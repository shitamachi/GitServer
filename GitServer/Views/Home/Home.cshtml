@using System.Collections.Generic
@model IEnumerable<GitServer.ApplicationCore.Models.Repository>
@{
    ViewBag.Title = "Home";
}
<h2 class="ui header">仓库列表</h2>
<div class="right">
    <a href="/Home/Create">
        <button class="ui teal right labeled icon button"><i class="right arrow icon"></i>新建仓库</button>
    </a>
</div>
<div class="ui relaxed divided list">
    @foreach (var repo in Model)
    {
        <div class="ui items">
            <div class="item">
                <div class="content">
                    <a class="header">
                        @repo.UserName/@Html.RouteLink(repo.Name, "GetRepositoryHomeView", new {userName = repo.UserName, repoName = repo.Name}, new {@class = "header medium ui"})
                    </a>
                    <div class="description">
                        <div class="description">@repo.Description</div>
                    </div>
                    <div class="extra">
                        <div class="description">Updated @repo.UpdateTime</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>